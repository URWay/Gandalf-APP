<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.senac.luiz.piquatro.CadastroEndereco">

    <EditText
        android:id="@+id/txtnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:hint="Nome do Endereço"
        android:inputType="textPersonName"
        android:layout_marginEnd="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button" />

    <EditText
        android:id="@+id/txtendereco"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Endereço"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtnome"
        android:layout_alignStart="@+id/txtnome"
        android:layout_alignEnd="@+id/txtnome" />

    <EditText
        android:id="@+id/txtnum"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtendereco"
        android:layout_alignBottom="@+id/txtendereco"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/txtendereco"
        android:ems="10"
        android:hint="N°"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtcep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtendereco"
        android:layout_below="@+id/txtendereco"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="CEP"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtcomplemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtcep"
        android:layout_below="@+id/txtcep"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Complemento"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnercidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/txtcomplemento"
        android:layout_alignStart="@+id/txtcomplemento"
        android:layout_alignEnd="@+id/button" />

    <Spinner
        android:id="@+id/spinneruf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnercidade"
        android:layout_below="@+id/spinnercidade"
        android:layout_marginTop="17dp"
        android:layout_alignEnd="@+id/spinnercidade" />

    <Spinner
        android:id="@+id/spinnerpais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinneruf"
        android:layout_alignStart="@+id/spinneruf"
        android:layout_below="@+id/spinneruf"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Cadastrar Endereço" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="Preencha os campos abaixo:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
