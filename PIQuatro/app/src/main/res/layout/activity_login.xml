<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.senac.luiz.piquatro.Login">


    <TextView
        android:text="imglogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/txtlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtlogin"
        android:hint="Login"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/txtsenha"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtsenha"
        android:hint="Senha"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/txtlogin" />

    <Button
        android:text="Entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnok"
        android:textColorLink="@android:color/holo_green_dark"
        android:background="@android:color/holo_blue_bright"
        android:textSize="18sp"
        android:layout_below="@+id/txtsenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:text="Novo por aqui!?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColorLink="@android:color/holo_green_dark"
        android:textColor="@android:color/black"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/txtreg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Clique aqui!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtreg"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColorLink="@android:color/holo_green_dark"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>