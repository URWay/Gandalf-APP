<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    tools:context="com.app.gandalf.piquatro.Carrinho.Carrinho">

    <ListView
        android:id="@+id/listaCart"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout"
        android:background="@layout/my_border">

        <Button
            android:id="@+id/btncheckout"
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:layout_marginStart="17dp"
            android:background="@android:color/holo_blue_bright"
            android:text="Comprar"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignTop="@+id/btncontinuacompra"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btncontinuacompra"
            android:layout_width="160dp"
            android:layout_height="34dp"
            android:layout_marginEnd="14dp"
            android:textSize="12sp"
            android:background="@android:color/holo_blue_bright"
            android:text="Continue comprando"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>
