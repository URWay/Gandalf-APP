<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.gandalf.piquatro.descProduto">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/btnvolta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_bright"
                android:text="Voltar "
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="26dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/btnvolta"
                android:layout_alignBottom="@+id/btnvolta"
                android:layout_toEndOf="@+id/textView13"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/txttotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp"
                android:layout_alignBottom="@+id/textView10"
                android:layout_toEndOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="122dp"
                android:text="Endereço Selecionado:"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:layout_above="@+id/textView45"
                android:layout_alignStart="@+id/btnvolta" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="Endereço:"
                android:layout_below="@+id/textView39"
                android:layout_alignStart="@+id/textView13"
                android:layout_marginStart="11dp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="UF:"
                android:layout_below="@+id/textView7"
                android:layout_toEndOf="@+id/textView45" />

            <TextView
                android:id="@+id/txtuf"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView24"
                android:layout_alignBottom="@+id/textView24"
                android:layout_toEndOf="@+id/textView24"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forma de Pgto.:"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:layout_above="@+id/btnvolta"
                android:layout_alignEnd="@+id/textView10" />

            <TextView
                android:id="@+id/txtpagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txttotal"
                android:layout_alignEnd="@+id/txttotal"
                android:layout_alignTop="@+id/textView45"
                android:text="TextView" />

            <TextView
                android:id="@+id/idpedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView39"
                android:layout_alignBottom="@+id/textView39"
                android:layout_toEndOf="@+id/textView39"
                android:text="ID" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedido #"
                android:layout_alignBottom="@+id/textView13"
                android:layout_alignStart="@+id/textView24"
                android:layout_alignTop="@+id/textView13" />

        </RelativeLayout>


    <ListView
        android:id="@+id/listaitens"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="Nome:"
        android:layout_below="@+id/listaitens"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginStart="23dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cep:"
        android:layout_below="@+id/txtendereco"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade:"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complemento:"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N°"
        android:layout_below="@+id/textView14"
        android:layout_toEndOf="@+id/txtnome"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/txtnome"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_above="@+id/textView36"
        android:layout_toEndOf="@+id/textView14" />

    <TextView
        android:id="@+id/txtendereco"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/txtnome"
        android:layout_alignEnd="@+id/txtnome" />

    <TextView
        android:id="@+id/txtcep"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView12"
        android:layout_toEndOf="@+id/textView23"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtcomplemento"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView30"
        android:layout_alignBottom="@+id/textView30"
        android:layout_alignEnd="@+id/txtendereco"
        android:text="TextView" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/txtnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/textView36"
        android:layout_alignBottom="@+id/textView36"
        android:layout_toEndOf="@+id/textView36" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginStart="15dp"
        android:text="Produtos Vinculados"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtcidade"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtcep"
        android:layout_toEndOf="@+id/textView12"
        android:text="TextView" />

</RelativeLayout>
