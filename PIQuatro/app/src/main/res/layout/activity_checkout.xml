<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.gandalf.piquatro.Checkout.Checkout">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <Button
                    android:id="@+id/comprar"
                    android:layout_width="376dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView22"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/holo_blue_bright"
                    android:text="Finalizar compra"
                    android:textColorLink="@android:color/holo_green_dark"
                    android:layout_alignStart="@+id/idcod" />

              <TextView
                    android:id="@+id/textView5"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                  android:layout_above="@+id/textView27"
                  android:layout_alignParentEnd="true" />


                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Endereço de entrega:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/spinParcelas" />

                <TextView
                    android:id="@+id/textEndereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView22"
                    android:layout_alignParentEnd="true" />


                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="350dp"
                    android:layout_height="150dp"
                    android:layout_alignEnd="@+id/spiMes"
                    android:layout_below="@+id/textView21"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                         />
                <Button
                    android:id="@+id/btnEnderecoTroca"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"

                    android:background="@android:color/holo_blue_light"
                    android:text="Alterar endereço"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:layout_alignTop="@+id/textView22"
                    android:layout_alignEnd="@+id/textView22"
                    android:layout_marginTop="17dp"
                    android:layout_alignStart="@+id/textView5" />


                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/btnEnderecoTroca"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:text="Cartão de Crédito"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="400dp"
                    android:layout_height="270dp"
                    android:text=""
                    android:layout_below="@+id/textView22"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="60dp"
                    android:layout_height="15dp"

                    android:layout_alignStart="@+id/txtnumcod"
                    android:layout_below="@+id/txtnumcod"
                    android:lineSpacingExtra="14sp"
                    android:text="Cartão:"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titular do cartão"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/textView25"
                    android:layout_alignStart="@+id/textView25"
                    android:layout_marginTop="11dp" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="Validade:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/idcod"
                    android:layout_alignStart="@+id/idcod" />


                <Spinner
                    android:id="@+id/spinnerParcela"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textView29"
                    android:layout_alignEnd="@+id/textView21"
                    android:layout_marginTop="17dp">

                </Spinner>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="100dp"

                    android:layout_height="wrap_content"
                    android:text="Parcelar em:"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/spinParcelas"
                    android:layout_alignEnd="@+id/spinnerParcela"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/txtnumcod"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:hint="Número do cartão"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_alignBaseline="@+id/textView26"
                    android:layout_alignBottom="@+id/textView26"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_alignEnd="@+id/textView25" />


                <EditText
                    android:id="@+id/idcod"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Digite o código do cartão"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_below="@+id/textView27"
                    android:layout_alignStart="@+id/txtnumcod"
                    android:layout_alignEnd="@+id/txtnumcod" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/spinnerParcela"
                    android:layout_toStartOf="@+id/spinnerParcela"
                    android:text="Mês"
                    android:textAlignment="center"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/spiAno"
                    android:layout_toStartOf="@+id/spiAno"
                    android:text="Ano"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spiAno"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/spinnerParcela"
                    android:layout_alignEnd="@+id/comprar">

                </Spinner>

                <Spinner
                    android:id="@+id/spinParcelas"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/spinnerParcela"
                    android:layout_toStartOf="@+id/spiAno" />




            </RelativeLayout>
        </ScrollView>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/textVQtdProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView20"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="44dp"
        android:text="Itens"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editTotal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberDecimal"
        android:text="quantidadeprod"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/textView20"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Total:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="38dp"
        android:layout_below="@+id/textVQtdProduto"
        android:layout_alignParentStart="true" />


</RelativeLayout>

