<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_cliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.senac.luiz.piquatro.CadastroCliente">


    <TextView
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:layout_alignBaseline="@+id/txtnome"
        android:layout_alignBottom="@+id/txtnome"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtnome"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_bright" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtsenha"
        android:hint="Senha"
        android:layout_below="@+id/txtemail"
        android:layout_alignStart="@+id/txtemail"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/txtemail"
        android:hint="email@exemplo.com"
        android:layout_below="@+id/txtnome"
        android:layout_alignStart="@+id/txtnome" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtcelular"
        android:layout_below="@+id/txtcpf"
        android:layout_alignStart="@+id/txtcpf"
        android:text="Celular" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtcomercial"
        android:layout_below="@+id/txtcelular"
        android:layout_alignStart="@+id/txtcelular"
        android:hint="Tel. Comercial" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/txtcomercial"
        android:layout_alignStart="@+id/txtcomercial"
        android:layout_marginTop="11dp"
        android:id="@+id/txtres"
        android:hint="Tel. Residencial" />

    <CheckBox
        android:text="Receber promoções e novidades via e-mail? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnasc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/checknews"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtnome"
        android:hint="Nome Completo"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/checknews" />

    <Button
        android:text="Enviar Dados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnok"
        android:background="@android:color/holo_blue_bright"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/checknews"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="CPF"
        android:ems="10"
        android:id="@+id/txtcpf"
        android:layout_below="@+id/txtsenha"
        android:layout_alignStart="@+id/txtsenha" />

    <TextView
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_alignBaseline="@+id/txtemail"
        android:layout_alignBottom="@+id/txtemail"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtemail" />

    <TextView
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_alignBaseline="@+id/txtsenha"
        android:layout_alignBottom="@+id/txtsenha"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtsenha" />

    <TextView
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_alignBaseline="@+id/txtcpf"
        android:layout_alignBottom="@+id/txtcpf"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtcpf" />

    <TextView
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_alignBaseline="@+id/txtcelular"
        android:layout_alignBottom="@+id/txtcelular"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtcelular" />

    <TextView
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_alignBaseline="@+id/txtnasc"
        android:layout_alignBottom="@+id/txtnasc"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtnasc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtnasc"
        android:hint="Data Nascimento"
        android:layout_below="@+id/txtres"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
