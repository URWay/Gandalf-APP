<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.senac.luiz.piquatro.FirstTime">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textLogo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Logo"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/searchView"
                android:layout_below="@+id/textLogo"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="376dp"
                android:layout_height="1dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/border_style"
                android:text="______________________________________________"
                android:id="@+id/textView3" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/Logo"
                android:background="@drawable/border_style"

                android:layout_alignParentStart="true"
                android:layout_marginTop="100dp" />

            <TextView
                android:id="@+id/NomeProd"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Nome do produto"
                android:textAlignment="center"
                android:background="@drawable/border_style"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentEnd="true" />

            <Spinner
                android:id="@+id/spinQtde"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/textQtde"
                android:layout_alignStart="@+id/textFrete"
                android:layout_marginTop="39dp" />


            <TextView
                android:id="@+id/textQtde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:text="Quantidade"
                android:textAlignment="center"
                android:layout_below="@+id/imageView2"
                android:layout_toStartOf="@+id/comprar" />

            <EditText
                android:id="@+id/txtPreco"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="R$ 0,00"
                android:layout_marginTop="85dp"
                android:layout_below="@+id/btnEcluir"
                android:layout_alignStart="@+id/NomeProd" />

            <Button
                android:id="@+id/btnEcluir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluir Produtos"
                android:layout_marginTop="75dp"
                android:layout_below="@+id/bntOk"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/bntOk"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="OK"
                android:layout_below="@+id/spinQtde"
                android:layout_alignStart="@+id/spinQtde" />

            <TextView
                android:id="@+id/textFrete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qtd Prod Frede (?)"
                android:textAlignment="center"
                android:layout_above="@+id/textView7"
                android:layout_alignStart="@+id/textView7" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="150sp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="R$ 0,00"
                android:layout_alignTop="@+id/spinQtde"
                android:layout_alignParentEnd="true" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="31dp"
                android:background="#000000"
                android:text="________________________________________________"
                android:layout_below="@+id/txtPreco"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_below="@+id/textView7"
                android:layout_alignStart="@+id/textFrete"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="R$0,00"
                android:layout_alignTop="@+id/textView8"
                android:layout_alignStart="@+id/txtPreco"
                android:layout_alignEnd="@+id/txtPreco" />


            <Button
                android:id="@+id/comprar"
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bntOk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="400dp"
                android:text="COMPRAR" />

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
